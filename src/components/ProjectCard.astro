---
import Icon from './Icon.astro'
import Card from './Card.astro'

interface Props {
  title: string
  skills: string[]
  repo?: string
  web?: string
}

const { repo, skills, title, web } = Astro.props as Props
---

<Card className="flex gap-3 p-3">
  <header class="flex gap-6 items-center justify-between">
    <h4 class="text-lg">{title}</h4>
    <div class="flex gap-3">
      {web && (
        <a href={web} target="_blank">
          <Icon pack="mdi" name="link" />
        </a>
      )}
      {repo && (
        <a href={`https://github.com/adrianrl99/${repo}`} target="_blank">
          <Icon pack="simple-icons" name="github" />
        </a>
      )}
    </div>
  </header>
  <slot />
  <footer>
    <ul class="flex gap-2 flex-wrap">
      {skills.map(skill => (
        <li>
          <Icon pack="simple-icons" name={skill} size="small" />
        </li>
      ))}
    </ul>
  </footer>
</Card>
